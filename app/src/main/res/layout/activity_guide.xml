<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/guide_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guide_title"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18sp"
        android:background="@drawable/btn_start_main_shape"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_size_80dp"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_size_40dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:id="@+id/guide_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
        <ImageView
            android:id="@+id/guide_red"
            android:layout_width="@dimen/margin_size_10dp"
            android:layout_height="@dimen/margin_size_10dp"
            android:background="@drawable/point_selector"/>
    </RelativeLayout>

</RelativeLayout>