<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_size_150dp"
    android:padding="@dimen/margin_size_10dp">

    <ImageView
        android:id="@+id/ic_icon"
        android:layout_marginStart="@dimen/margin_size_10dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:layout_width="@dimen/margin_size_100dp"
        android:layout_height="@dimen/margin_size_100dp"
        android:src="@drawable/content_home"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/ic_icon"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_size_10dp">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textSize="@dimen/text_size_24sp"
            android:textColor="@color/black"
            android:text="@string/app_name"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_24sp"
            android:textColor="@color/grey"
            android:text="@string/app_name"
            android:layout_marginTop="@dimen/margin_size_20dp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_size_10dp"
        android:layout_marginBottom="@dimen/margin_size_10dp"
        android:src="@drawable/content_news"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1dp"
        android:background="@color/grey"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>