<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_size_10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/item_photo_menu_bg">
        <ImageView
            android:id="@+id/photo_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_180dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/photo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photo_title"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_24sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_size_10dp"
            android:layout_marginBottom="@dimen/margin_size_10dp"/>
    </LinearLayout>
</RelativeLayout>